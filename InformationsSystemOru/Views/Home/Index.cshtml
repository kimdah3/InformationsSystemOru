@model InformationsSystemOru.Models.LoginModel
@{
    ViewBag.Title = "Home Page";
}

<h2>Vänligen logga in</h2>
<br/>
<div id="Login">
    @using (Html.BeginForm("Index", "Home"))
    {
        <p>Username</p>
        <br />
        @Html.TextBoxFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
        <br />
        <p>Password</p>
        <br />
        @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


        <br />
        <input type="submit" value="Log in" class="btn btn-default" />
    }

    <br/>
    @{
        if (Model.ErrorMessage != null)
        {
            <h3 class="text-danger"> @Model.ErrorMessage </h3>
        }
    }
</div>