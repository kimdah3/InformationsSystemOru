@model InformationsSystemOru.Models.BlogModel
@using InformationsSystemOru.Extensions

@{
    ViewBag.Title = "ScienceBlog";
    Layout = User.Identity.IsAdmin() ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 class="text-center">Science</h1>
<h2 class="text-center">News and blogs about science at Örebro University</h2>
<br /><br />
<div class="col-md-12">

    <div id="blogg" class="col-md-6">
        @using (Html.BeginForm("ScienceBlog", "Blog", FormMethod.Post))
            {

            <div class="form-group">

                @Html.LabelFor(model => model.Title, "Title", htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Title, "TitleInput", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Category, "Category", htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Category, "Category", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Text, "Text", htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>

                <div>
                    <input type="submit" value="Post" class="btn btn-success" id="btnSend" />
                </div>

        }

    </div>
    
    <div class="col-md-12">
        <br />
        @if (Model.AllPostsForUser != null)
            {
                foreach (var post in Model.AllPostsForUser)
                {
                <div class="well well-sm">
                    <h1 class="text-center">@post.Titel</h1>
                    <h3 class="text-center">@post.Category</h3>
                    <h2 class="text-center">@post.Text</h2>
                    <p>@post.Date</p>
                </div>
            }
        }
    </div>

</div>

</div>