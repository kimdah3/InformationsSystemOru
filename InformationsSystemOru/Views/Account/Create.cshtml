            @Html.EditorFor(model => model.Firstname, new {htmlAttributes = new {@class = "form-control", placeholder = "Förnamn"}})
            @Html.ValidationMessageFor(model => model.Firstname, "", new {@class = "text-danger"})
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Lastname, "Efternamn", htmlAttributes: new {@class = "control-label col-md-2"})
