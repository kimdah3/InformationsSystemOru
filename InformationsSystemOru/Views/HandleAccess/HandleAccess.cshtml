@model InformationsSystemOru.Models.HandleAccessModel
@{
    ViewBag.Title = "HandleAccess";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="well well-lg">
    <div class="form-horizontal" style="margin-left: 25%;">
        <h4>Handle Access</h4>
        <hr />
        @using (Html.BeginForm("GiveUserNewswritingAccess", "HandleAccess"))
        {
            <div class="form-group">
                @Html.Label("GiveAccess", "Give user news access.")
                @Html.DropDownListFor(model => model.SelectedUser, new SelectList(Model.UsersWithoutAccess), "Choose a user", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedUser, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Give access" class="btn btn-success" />
            </div>
        }

        @using (Html.BeginForm("RemoveUserNewswritingAccess", "HandleAccess"))
        {
            <div class="form-group">
                @Html.Label("RemoveAccess", "Remove news access from user.")
                @Html.DropDownListFor(Model => Model.SelectedUser, new SelectList(Model.UsersWithAccess), "Choose a user", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedUser, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Remove access" class="btn btn-success" />
            </div>
        }
    </div>
</div>
